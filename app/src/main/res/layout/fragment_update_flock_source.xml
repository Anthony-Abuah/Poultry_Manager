<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".tables.flock_source.fragments.UpdateFlockSource">


    <LinearLayout
        android:id="@+id/llUpdateFlockSourceHeader_UpdateFlockSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ibBack_UpdateFlockSource"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:elevation="25dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvHeaderInfo_UpdateFlockSource"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="8"
            android:background="@drawable/header_background"
            android:elevation="25dp"
            android:padding="5dp"
            android:text="Update Flock Source"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibInfo_UpdateFlockSource"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:elevation="25dp"
            android:src="@drawable/ic_information" />


    </LinearLayout>


    <TextView
        android:id="@+id/tvFlockSourceName_UpdateFlockSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the name of flock source"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/etFlockSourceName_UpdateFlockSource"
        app:layout_constraintTop_toBottomOf="@id/llUpdateFlockSourceHeader_UpdateFlockSource" />


    <EditText
        android:id="@+id/etFlockSourceName_UpdateFlockSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/big_edit_text_background"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFlockSourceName_UpdateFlockSource" />

    <TextView
        android:id="@+id/tvFlockSourceContact_UpdateFlockSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the contact of flock source  "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/etFlockSourceContact_UpdateFlockSource"
        app:layout_constraintTop_toBottomOf="@id/etFlockSourceName_UpdateFlockSource" />

    <EditText
        android:id="@+id/etFlockSourceContact_UpdateFlockSource"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/big_edit_text_background"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFlockSourceContact_UpdateFlockSource" />

    <TextView
        android:id="@+id/tvFlockSourceLocation_UpdateFlockSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the location of flock source  "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/etFlockSourceLocation_UpdateFlockSource"
        app:layout_constraintTop_toBottomOf="@id/etFlockSourceContact_UpdateFlockSource" />

    <EditText
        android:id="@+id/etFlockSourceLocation_UpdateFlockSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:inputType="text"
        android:background="@drawable/big_edit_text_background"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFlockSourceLocation_UpdateFlockSource" />


    <EditText
        android:id="@+id/etShortNotes_UpdateFlockSource"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/big_edit_text_background"
        android:ems="10"
        android:gravity="start|top"
        android:hint="write short notes"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFlockSourceLocation_UpdateFlockSource" />


    <Button
        android:id="@+id/btnUpdate_UpdateFlockSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/big_button_background"
        android:text="Update"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etShortNotes_UpdateFlockSource"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvUpdateFlockSourceId_UpdateFlockSource"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="0sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>