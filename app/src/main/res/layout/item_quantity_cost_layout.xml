<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/clEggTypeItem"
    android:background="@color/green"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    >



    <TextView
        android:id="@+id/tvItem_ItemQuantityCostLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/green"
        android:elevation="25dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="2dp"
        android:gravity="center"
        android:text="22-12-2022"
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvQuantity_ItemQuantityCostLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/green"
        android:elevation="25dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:gravity="center"
        android:text="500 crates, 200 eggs"
        android:textSize="16sp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tvCost_ItemQuantityCostLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/green"
        android:elevation="25dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="2dp"
        android:gravity="center"
        android:text="500 crates, 200 eggs"
        android:textSize="16sp"
        android:textColor="@color/white"/>






</LinearLayout>