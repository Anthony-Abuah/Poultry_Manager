<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/background_white"
    android:layout_margin="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/ivPersonImage_PersonLayout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/image_view_background"
            android:src="@drawable/customer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvPersonName_PersonLayout" />

        <TextView
            android:id="@+id/tvPersonName_PersonLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/ivPersonImage_PersonLayout"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPersonContact_PersonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: 0500912348"
            android:textSize="16sp"
            android:textColor="@color/light_black"
            app:layout_constraintStart_toStartOf="@id/tvPersonName_PersonLayout"
            app:layout_constraintTop_toBottomOf="@id/tvPersonName_PersonLayout"
            />

        <TextView
            android:id="@+id/tvPersonLocation_PersonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: Takoradi"
            android:textColor="@color/light_black"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            app:layout_constraintStart_toStartOf="@id/tvPersonName_PersonLayout"
            app:layout_constraintTop_toBottomOf="@id/tvPersonContact_PersonLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            />


        <ImageView
            android:id="@+id/ivUpdateDeleteMenu_PersonLayout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_more"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>