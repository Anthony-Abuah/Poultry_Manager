<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tvName_NameQuantityCostLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:elevation="25dp"
        android:layout_weight="5"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/report_background"
        android:paddingEnd="4dp"
        android:gravity="start"
        android:textSize="16sp"
        android:textColor="@color/light_black"
        android:text="Mon, 02 Jan, 2023"/>

    <TextView
        android:id="@+id/tvQuantity_NameQuantityCostLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="25dp"
        android:layout_weight="5"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/report_background"
        android:paddingEnd="4dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/light_black"
        android:text="500 crates, 200 eggs"/>

    <TextView
        android:id="@+id/tvCost_NameQuantityCostLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:elevation="25dp"
        android:layout_weight="3"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/report_background"
        android:paddingEnd="4dp"
        android:gravity="end"
        android:textSize="16sp"
        android:textColor="@color/light_black"
        android:text="GHS 500"/>






</LinearLayout>