<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".inventory.flock.addition.fragments.FlockAdditionForm">

    <LinearLayout
        android:id="@+id/llAddCustomerHeader_FlockInventoryAdditionForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ibBack_FlockInventoryAdditionForm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:elevation="25dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvHeaderInfo_FlockInventoryAdditionForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="8"
            android:background="@drawable/header_background"
            android:elevation="25dp"
            android:padding="5dp"
            android:text="Add Flock Inventory"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibInfo_FlockInventoryAdditionForm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:elevation="25dp"
            android:src="@drawable/ic_information" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llAddCustomerHeader_FlockInventoryAdditionForm">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tvEnterDate_FlockInventoryAdditionForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:text="Enter the date"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tvDatePicker_FlockInventoryAdditionForm"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDatePicker_FlockInventoryAdditionForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/big_edit_text_background"
            android:hint="Enter Date"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEnterDate_FlockInventoryAdditionForm" />

        <TextView
            android:id="@+id/tvFlockName_FlockInventoryAdditionForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Enter the name of the Flock batch"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/etFlockName_FlockInventoryAdditionForm"
            app:layout_constraintTop_toBottomOf="@id/tvDatePicker_FlockInventoryAdditionForm" />

        <EditText
            android:id="@+id/etFlockName_FlockInventoryAdditionForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/big_edit_text_background"
            android:drawableEnd="@drawable/ic_info"
            android:drawablePadding="2dp"
            android:inputType="text"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFlockName_FlockInventoryAdditionForm"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tvFlockQuantity_FlockInventoryAdditionForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Enter the number of Birds Added"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/etFlockQuantity_FlockInventoryAdditionForm"
            app:layout_constraintTop_toBottomOf="@id/etFlockName_FlockInventoryAdditionForm" />

        <EditText
            android:id="@+id/etFlockQuantity_FlockInventoryAdditionForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/big_edit_text_background"
            android:drawableEnd="@drawable/ic_info"
            android:drawablePadding="2dp"
            android:inputType="number"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFlockQuantity_FlockInventoryAdditionForm" />


        <TextView
            android:id="@+id/tvFlockAge_FlockInventoryAdditionForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Enter the age of Birds Added"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/etFlockAge_FlockInventoryAdditionForm"
            app:layout_constraintTop_toBottomOf="@id/etFlockQuantity_FlockInventoryAdditionForm" />

        <EditText
            android:id="@+id/etFlockAge_FlockInventoryAdditionForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/big_edit_text_background"
            android:drawableEnd="@drawable/ic_info"
            android:drawablePadding="2dp"
            android:inputType="number"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFlockAge_FlockInventoryAdditionForm" />

        <TextView
            android:id="@+id/tvFlockBreed_FlockInventoryAdditionForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Enter the breed of Birds Added"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/etFlockBreed_FlockInventoryAdditionForm"
            app:layout_constraintTop_toBottomOf="@id/etFlockAge_FlockInventoryAdditionForm" />

        <EditText
            android:id="@+id/etFlockBreed_FlockInventoryAdditionForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/big_edit_text_background"
            android:drawableEnd="@drawable/ic_info"
            android:drawablePadding="2dp"
            android:inputType="text"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFlockBreed_FlockInventoryAdditionForm" />


        <TextView
            android:id="@+id/tvFlockPurpose_FlockInventoryAdditionForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:drawableEnd="@drawable/ic_info"
            android:text="Select the purpose of the birds           "
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/spFlockPurpose_FlockInventoryAdditionForm"
            app:layout_constraintTop_toBottomOf="@id/etFlockBreed_FlockInventoryAdditionForm" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/spFlockPurpose_FlockInventoryAdditionForm"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFlockPurpose_FlockInventoryAdditionForm">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/actvFlockPurpose_FlockInventoryAdditionForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/big_edit_text_background"
                android:inputType="text"
                android:paddingStart="15dp"
                android:paddingTop="1dp"
                android:paddingEnd="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/black"
                android:textSize="20sp">

                <requestFocus />
            </androidx.appcompat.widget.AppCompatAutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/tvFlockCost_FlockInventoryAdditionForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Enter the cost of the Flock"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/etFlockCost_FlockInventoryAdditionForm"
            app:layout_constraintTop_toBottomOf="@id/spFlockPurpose_FlockInventoryAdditionForm" />

        <EditText
            android:id="@+id/etFlockCost_FlockInventoryAdditionForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/big_edit_text_background"
            android:drawableEnd="@drawable/ic_info"
            android:drawablePadding="2dp"
            android:inputType="numberDecimal"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFlockCost_FlockInventoryAdditionForm" />


        <TextView
            android:id="@+id/tvFlockSource_FlockInventoryAdditionForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:drawableEnd="@drawable/ic_info"
            android:text="Enter the source of Flock        "
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/llFlockSource_FlockInventoryAdditionForm"
            app:layout_constraintTop_toBottomOf="@id/etFlockCost_FlockInventoryAdditionForm" />

        <LinearLayout
            android:id="@+id/llFlockSource_FlockInventoryAdditionForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFlockSource_FlockInventoryAdditionForm">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/spFlockSource_FlockInventoryAdditionForm"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="7">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/actvFlockSource_FlockInventoryAdditionForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/big_edit_text_background"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingTop="1dp"
                    android:paddingEnd="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/black"
                    android:textSize="20sp">

                    <requestFocus />
                </androidx.appcompat.widget.AppCompatAutoCompleteTextView>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/ivAddFlockSource_FlockInventoryAdditionForm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="right"
                android:src="@drawable/add" />
        </LinearLayout>

        <EditText
            android:id="@+id/etShortNotes_FlockInventoryAdditionForm"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/big_edit_text_background"
            android:ems="10"
            android:gravity="start|top"
            android:hint="write short notes"
            android:inputType="textMultiLine"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llFlockSource_FlockInventoryAdditionForm" />

        <Button
            android:id="@+id/btnSave_FlockInventoryAdditionForm"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/big_button_background"
            android:elevation="10dp"
            android:text="Save"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etShortNotes_FlockInventoryAdditionForm" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>