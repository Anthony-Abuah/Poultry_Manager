<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".tables.lender_investor.fragments.UpdateLenderInvestor">


    <LinearLayout
        android:id="@+id/llUpdateLenderOrInvestorHeader_UpdateLenderOrInvestorForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ibBack_UpdateLenderOrInvestorForm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:elevation="25dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvHeaderInfo_UpdateLenderOrInvestorForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="8"
            android:background="@drawable/header_background"
            android:elevation="25dp"
            android:padding="5dp"
            android:text="Lender Or Investor"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibInfo_UpdateLenderOrInvestorForm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:elevation="25dp"
            android:src="@drawable/ic_information" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvLenderInvestorName_UpdateLenderInvestor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the name of lender or investor  "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/etLenderInvestorName_UpdateLenderInvestor"
        app:layout_constraintTop_toBottomOf="@id/llUpdateLenderOrInvestorHeader_UpdateLenderOrInvestorForm" />


    <EditText
        android:id="@+id/etLenderInvestorName_UpdateLenderInvestor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/big_edit_text_background"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLenderInvestorName_UpdateLenderInvestor" />

    <TextView
        android:id="@+id/tvLenderInvestorContact_UpdateLenderInvestor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the contact of lender or investor  "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/etLenderInvestorContact_UpdateLenderInvestor"
        app:layout_constraintTop_toBottomOf="@id/etLenderInvestorName_UpdateLenderInvestor" />

    <EditText
        android:id="@+id/etLenderInvestorContact_UpdateLenderInvestor"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/big_edit_text_background"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLenderInvestorContact_UpdateLenderInvestor" />

    <TextView
        android:id="@+id/tvLenderInvestorLocation_UpdateLenderInvestor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the location of lender or investor  "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/etLenderInvestorLocation_UpdateLenderInvestor"
        app:layout_constraintTop_toBottomOf="@id/etLenderInvestorContact_UpdateLenderInvestor" />

    <EditText
        android:id="@+id/etLenderInvestorLocation_UpdateLenderInvestor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:inputType="text"
        android:background="@drawable/big_edit_text_background"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLenderInvestorLocation_UpdateLenderInvestor" />


    <EditText
        android:id="@+id/etShortNotes_UpdateLenderInvestor"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/big_edit_text_background"
        android:ems="10"
        android:gravity="start|top"
        android:hint="write short notes"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLenderInvestorLocation_UpdateLenderInvestor" />


    <Button
        android:id="@+id/btnUpdate_UpdateLenderInvestor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/big_button_background"
        android:text="Update"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etShortNotes_UpdateLenderInvestor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvUpdateLenderInvestorId_UpdateLenderInvestor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="0sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>