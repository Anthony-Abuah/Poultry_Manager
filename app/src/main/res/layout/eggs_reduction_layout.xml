<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clEggsReductionList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/background_white"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        >

    <ImageView
        android:id="@+id/ivEggsReductionImage_EggsReductionLayout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/recycler_view_image"
        android:elevation="5dp"
        android:src="@drawable/eggs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvEggsReductionDate_EggsReductionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:elevation="25dp"
        android:text="22-10-2022"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />


    <TextView
        android:id="@+id/tvEggType_EggsReductionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="25dp"
        android:text="Intact Eggs"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ivEggsReductionImage_EggsReductionLayout"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvEggQuantity_EggsReductionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:elevation="25dp"
        android:text="700 crates, 13 eggs"
        android:textColor="@color/light_black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ivEggsReductionImage_EggsReductionLayout"
        app:layout_constraintTop_toBottomOf="@id/tvEggType_EggsReductionLayout" />

    <TextView
        android:id="@+id/tvReductionReason_EggsReductionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:elevation="25dp"
        android:text="Sold to Aunty Mary"
        android:textColor="@color/light_black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ivEggsReductionImage_EggsReductionLayout"
        app:layout_constraintTop_toBottomOf="@id/tvEggQuantity_EggsReductionLayout" />

    <TextView
        android:id="@+id/tvSalesInfo_EggsReductionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="25dp"
        android:text="Cost: GHS2,000\nAmount Paid: GHS2,000\nAmount Owed: GHS 0"
        android:textColor="@color/light_black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ivEggsReductionImage_EggsReductionLayout"
        app:layout_constraintTop_toBottomOf="@id/tvReductionReason_EggsReductionLayout" />


    <ImageView
        android:id="@+id/ivUpdate_Delete_Menu_EggsReductionLayout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:elevation="25dp"
        android:src="@drawable/ic_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>