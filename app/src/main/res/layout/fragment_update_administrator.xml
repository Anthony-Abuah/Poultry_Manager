<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".tables.vaccine_administrator.fragments.UpdateAdministrator">


    <LinearLayout
        android:id="@+id/llUpdateAdministratorHeader_UpdateAdministratorForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ibBack_UpdateAdministratorForm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:elevation="25dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvHeaderInfo_UpdateAdministratorForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="8"
            android:background="@drawable/header_background"
            android:elevation="25dp"
            android:padding="5dp"
            android:text="Administrator"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibInfo_UpdateAdministratorForm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:elevation="25dp"
            android:src="@drawable/ic_information" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvAdministratorName_UpdateAdministratorForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the name of customer  "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/etAdministratorName_UpdateAdministratorForm"
        app:layout_constraintTop_toBottomOf="@id/llUpdateAdministratorHeader_UpdateAdministratorForm" />


    <EditText
        android:id="@+id/etAdministratorName_UpdateAdministratorForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/big_edit_text_background"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAdministratorName_UpdateAdministratorForm" />

    <TextView
        android:id="@+id/tvAdministratorContact_UpdateAdministratorForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the contact of customer  "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/etAdministratorContact_UpdateAdministratorForm"
        app:layout_constraintTop_toBottomOf="@id/etAdministratorName_UpdateAdministratorForm" />

    <EditText
        android:id="@+id/etAdministratorContact_UpdateAdministratorForm"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/big_edit_text_background"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAdministratorContact_UpdateAdministratorForm" />

    <TextView
        android:id="@+id/tvAdministratorLocation_UpdateAdministratorForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the location of customer  "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/etAdministratorLocation_UpdateAdministratorForm"
        app:layout_constraintTop_toBottomOf="@id/etAdministratorContact_UpdateAdministratorForm" />

    <EditText
        android:id="@+id/etAdministratorLocation_UpdateAdministratorForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:inputType="text"
        android:background="@drawable/big_edit_text_background"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAdministratorLocation_UpdateAdministratorForm" />


    <EditText
        android:id="@+id/etShortNotes_UpdateAdministratorForm"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/big_edit_text_background"
        android:ems="10"
        android:gravity="start|top"
        android:hint="write short notes"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAdministratorLocation_UpdateAdministratorForm" />


    <Button
        android:id="@+id/btnUpdate_UpdateAdministratorForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/big_button_background"
        android:text="Update"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etShortNotes_UpdateAdministratorForm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvAdministratorId_UpdateAdministratorForm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="0sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>